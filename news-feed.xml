---
layout: null
collection: news
months_to_show: 4
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" {% if site.lang %}xml:lang="{{ site.lang }}"{% endif %}>
  <link href="{{ page.url | absolute_url }}" rel="self" type="application/atom+xml" />
  <link href="{{ '/' | absolute_url }}" rel="alternate" type="text/html" {% if site.lang %}hreflang="{{ site.lang }}" {% endif %}/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ page.url | absolute_url | xml_escape }}</id>
  <title type="html">{{ site.title | smartify | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  {% if site.author -%}
  <author>
    <name>{{ site.author.name | default: site.author | xml_escape }}</name>
    {% if site.author.email -%}
      <email>{{ site.author.email | xml_escape }}</email>
    {%- endif %}
  </author>
  {%- endif %}

  {%- assign posts = site[page.collection] -%}
  {%- unless site.show_drafts %}
    {%- assign posts = posts | where_exp: "post", "post.draft != true" -%}
  {%- endunless -%}
  {%- assign valid_dates_interval = page.months_to_show | times: 3600 | times: 24 | times: 30 -%}
  {%- assign first_valid_date = 'now' | date: '%s' | minus: valid_dates_interval -%}

  {%- assign posts = posts | sort: "date" | reverse -%}

  {%- for post in site.news %}
  {% assign post_date = post.date | date: '%s' | plus: 0 -%}
  {%- if post_date >= first_valid_date -%}
  <entry{% if post.lang %}{{" "}}xml:lang="{{ post.lang }}"{% endif %}>
    {% assign post_title = post.title | smartify | strip_html | normalize_whitespace | xml_escape -%}

    <title type="html">{{ post_title }}</title>
    <link href="{{ post.link | default: post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post_title }}" />
    {% if post.related -%}
      <link href="{{ post.related | absolute_url }}" rel="related" type="text/html" />
    {%- endif %}
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</updated>
    <id>{{ post.link | default: post.id | absolute_url | xml_escape }}</id>
    <content type="html" xml:base="{{ post.link | default: post.url | absolute_url | xml_escape }}"><![CDATA[{{ post.content | strip }}]]></content>
    {% assign post_author = post.author | default: post.authors[0] | default: site.author -%}
    {%- assign post_author_email = post_author.email | default: nil -%}
    {%- assign post_author_name = post_author.name | default: post_author -%}

    {%- if post.author and post.author != empty -%}
    <author>
      <name>{{ post_author_name | default: "" | xml_escape }}</name>
      {% if post_author_email -%}
        <email>{{ post_author_email | xml_escape }}</email>
      {%- endif %}
    </author>
    {%- endif %}
    {% assign post_summary = post.description | default: post.excerpt -%}
    {%- if post_summary and post_summary != empty -%}
      <summary type="html"><![CDATA[{{ post_summary | strip_html | strip | normalize_whitespace }}]]></summary>
    {%- endif -%}

    {% assign post_image = post.image.path | default: post.image -%}
    {% if post_image -%}
      {%- unless post_image contains "://" -%}
        {%- assign post_image = post_image | absolute_url -%}
      {%- endunless -%}
      <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ post_image | xml_escape }}" />
      <media:content medium="image" url="{{ post_image | xml_escape }}" xmlns:media="http://search.yahoo.com/mrss/" />
    {%- endif %}
  </entry>
  {%- endif -%}
  {%- endfor %}
</feed>